import GameGridController from "../game/gameGrid/GameGridController";
import GameShulteController from "../game/gameShulte/GameShulteController";
import SoundManager from "./SoundManager";

export default class Mgr {
    private static _soundMgr:SoundManager;
    private static isInit:boolean = false;

    public static Init() {
        if (Mgr.isInit) return;

        Mgr.InitCtrl();
        Mgr._soundMgr = new SoundManager();
        Mgr.isInit = true;
    }

    public static get soundMgr():SoundManager{
        if(!Mgr._soundMgr.isInit){
            Mgr._soundMgr.init();
        }
        return Mgr._soundMgr;
    }

    private static InitCtrl(){
        let ctrl:GameShulteController = new GameShulteController();
        let ctrl2:GameGridController = new GameGridController();
    }
}


